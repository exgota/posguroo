---
import BaseLayout from '../layouts/BaseLayout.astro';
import { useCopy, useKpis } from '../../utils/useCopy';
import logo from '../assets/logo.svg?raw';
const copy = useCopy();
const kpis = useKpis();
---
<BaseLayout title={copy.title} description={copy.description}>
  <section class="min-h-screen flex items-center justify-between p-8" data-aos="fade-up">
    <div>
      <h1 class="text-4xl font-bold" data-dynamic="headline">{copy.heroHeadline}</h1>
      <p class="mt-4">{copy.heroSubtext}</p>
    </div>
    <div id="form-slot"><!-- CRM_FORM_HERE --></div>
  </section>

  <section class="py-12 grid md:grid-cols-3 gap-4" data-aos="fade-up">
    {copy.benefits.map(b => (<div class="p-4 bg-gray-100" >{b}</div>))}
  </section>

  <section class="py-12" data-aos="fade-up">
    <div class="flex space-x-4 overflow-x-auto snap-x">
      <img src="/media/hero.jpg" alt="logo1" class="snap-start" loading="lazy" />
      <img src="/media/hero.jpg" alt="logo2" class="snap-start" loading="lazy" />
      <img src="/media/hero.jpg" alt="logo3" class="snap-start" loading="lazy" />
    </div>
  </section>

  <section class="py-12 grid md:grid-cols-2 gap-8" data-aos="fade-up">
    <div>Comparison</div>
    <div>Details</div>
  </section>

  <section class="py-12" data-aos="fade-up">
    <h2 class="text-2xl font-bold mb-4">Revenue KPIs</h2>
    <div class="space-y-2">
      {Object.entries(kpis).map(([key,val]) => (
        <div class="bg-primary text-white" style={`width:${val}%`}>
          {key}: {val}%
        </div>
      ))}
    </div>
  </section>

  <section class="py-12" data-aos="fade-up">
    <div class="p-8 bg-dark text-white">Resource Download</div>
  </section>

  <footer class="p-8 bg-gray-200">
    <div class="h-8" innerHTML={logo}></div>
    <div id="form-slot"><!-- CRM_FORM_HERE --></div>
  </footer>

  <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
  <link href="https://unpkg.com/aos@next/dist/aos.css" rel="stylesheet" />
  <script> AOS.init(); </script>
  <script type="module">
    import { personalizeHeadline } from '../../utils/geo.ts';
    personalizeHeadline();
  </script>
</BaseLayout>
